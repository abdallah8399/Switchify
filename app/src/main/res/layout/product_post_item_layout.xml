<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_circleUserImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/item_tvHomeUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_circleUserImage"
            android:layout_toEndOf="@+id/item_circleUserImage"
            android:textSize="12dp"
            android:text="User name"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Description" />

    <ImageView
        android:id="@+id/item_ivHomeProductImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_photo_black_24dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/item_btnChat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_black_background"
            android:text="Chat">
        </Button>


    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>