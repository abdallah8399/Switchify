<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowProductActivity">

    <TextView
        android:id="@+id/tvShowProductName"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Name" />

    <ImageView
        android:id="@+id/ivShowProduct"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvShowProductName"
        app:srcCompat="@drawable/ic_photo_black_24dp" />

    <TextView
        android:id="@+id/tvShowProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivShowProduct"
        android:layout_marginTop="10dp"
        android:text="Description" />

    <ImageButton
        android:id="@+id/deletePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_below="@+id/tvShowProductDescription"
        app:srcCompat="@drawable/ic_delete_black_24dp" />


</RelativeLayout>